@model ViewModels.Dispatch

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-2"><b>Dispatch No :</b></div>
                    <div class="col-md-6" style="text-align:left">@Model.DONo</div>
                    <div class="col-md-2"><b>Dispatch Date :</b></div>
                    <div class="col-md-2">@Model.DODate.ToString("dd/MM/yyyy")</div>
                </div>
                <div class="row">
                    <div class="col-md-2"><b>Party :</b></div>
                    <div class="col-md-10" style="text-align:left">@Model.PartyName</div>
                </div>
                
                <div class="row">
                    <div class="col-md-2"><b>Booking :</b></div>
                    <div class="col-md-10">@Model.BookingAt</div>
                </div>
            </div>
        </div>
        @{
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <td>
                            Product
                        </td>
                        <td>
                            Shade
                        </td>
                        <td>
                            Packing
                        </td>
                        <td>
                            Dispatched Qty
                        </td>
                        <td>
                            Rate
                        </td>
                        <td>
                            Total
                        </td>
                    </tr>
                </thead>
                <tbody>
                    @{
                        decimal totalQty = 0;
                        decimal total = 0;
                    }
                    @if (Model.details != null && Model.details.Count > 0)
                    {
                        foreach (var row in Model.details)
                        {
                            totalQty += Convert.ToDecimal(row.Qty);
                            total += Convert.ToDecimal(row.Total);
                            <tr>
                                <td>@row.ProductName</td>
                                <td>@row.ShadeName</td>
                                <td>@row.PackingName</td>
                                <td>@row.Qty</td>
                                <td>@row.Rate</td>
                                <td>@row.Total</td>
                            </tr>
                        }
                    }
                    
                </tbody>
                <tfoot>
                    <tr style="font-weight:bold">
                        <td colspan="3">
                            Order Total
                        </td>
                        <td>
                            @totalQty
                        </td>
                        <td></td>
                        <td>
                            @total
                        </td>
                    </tr>
                </tfoot>
            </table>

        }
    </div>
</div>