@model ViewModels.Order

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-2"><b>Order No :</b></div>
                    <div class="col-md-6" style="text-align:left">@Model.OrderNo</div>
                    <div class="col-md-2"><b>Order Date :</b></div>
                    <div class="col-md-2">@Model.OrderDate.ToString("dd/MM/yyyy")</div>
                </div>
                <div class="row">
                    <div class="col-md-2"><b>Party :</b></div>
                    <div class="col-md-10" style="text-align:left">@Model.PartyName</div>
                </div>
                @*<div class="row">
                    <div class="col-md-2"><b>Delivery At :</b> </div>
                    <div class="col-md-10">@Model.PartyAddress</div>
                </div>
                <div class="row">
                    <div class="col-md-2"><b>Transport :</b></div>
                    <div class="col-md-10">@Model.TransportName</div>
                </div>*@
                <div class="row">
                    <div class="col-md-2"><b>Booking :</b></div>
                    <div class="col-md-10">@Model.BookingAt</div>
                </div>
            </div>
        </div>
        @{
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <td>
                            Product
                        </td>
                        <td>
                            Shade
                        </td>
                        <td>
                            Packing
                        </td>
                        <td>
                            Ordered Qty
                        </td>
                        <td>
                            Rate
                        </td>
                        <td>
                            Total
                        </td>
                    </tr>
                </thead>
                <tbody>
                    @{
                        decimal totalQty = 0;
                        decimal total = 0;
                    }
                    @foreach (var row in Model.orderDetail)
                    {
                        totalQty += Convert.ToDecimal(row.Qty);
                        total += Convert.ToDecimal(row.Total);
                        <tr>
                            <td>@row.ProductName</td>
                            <td>@row.ShadeName</td>
                            <td>@row.PackingName</td>
                            <td>@row.Qty</td>
                            <td>@row.Rate</td>
                            <td>@row.Total</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr style="font-weight:bold">
                        <td colspan="3">
                            Order Total
                        </td>
                        <td>
                            @totalQty
                        </td>
                        <td>
                            
                        </td>
                        <td>
                            @total
                        </td>
                    </tr>
                </tfoot>
            </table>

        }
    </div>
</div>