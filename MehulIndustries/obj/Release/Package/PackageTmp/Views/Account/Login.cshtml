@model ViewModels.Employee
@{
    ViewBag.Title = "Please Login here";
    Layout = "~/Views/Shared/_Account.cshtml";
}

<div class="wrapper-page">
    <div class="text-center">
        <a href="@Url.Action("Login","Account")" class="logo logo-lg"><i class="md md-equalizer"></i> <span>Mehul Industries</span> </a>
    </div>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal m-t-20",@id="frmLogin" }))
    {
        <div class="form-group">
            <div class="col-xs-12">
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Username" })
                <i class="md md-account-circle form-control-feedback l-h-34"></i>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12">
                @Html.TextBoxFor(x => x.Password, new { @type = "password", @class = "form-control", @placeholder = "Password" })
                <i class="md md-vpn-key form-control-feedback l-h-34"></i>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12">
                <div class="checkbox checkbox-primary">
                    <input id="checkbox-signup" type="checkbox" name="IsRemember">
                    <label for="checkbox-signup">
                        Remember me
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group text-right m-t-20">
            <div class="col-xs-12">
                <button class="btn btn-primary btn-custom w-md waves-effect waves-light" type="submit">
                    Log In
                </button>
            </div>
        </div>
        <div class="form-group m-t-20">
            <div class="col-xs-12">
                @Html.ValidationSummary()
            </div>
        </div>
        <div class="form-group m-t-30">
            <div class="col-sm-12 text-center">
                <a href="@Url.Action("ForgetPassword","Account")" class="text-muted">
                    <i class="fa fa-lock m-r-5"></i> Forgot your
                    password?
                </a>
            </div>
            @*<div class="col-sm-5 text-right">
                <a href="pages-register.html" class="text-muted">Create an account</a>
            </div>*@
        </div>
    }
</div>

<script>
    $(document).ready(function () {
        $('#frmLogin').validate({

            // Specify the validation rules
            rules: {
                UserName: "required",
                Password: "required",
            },

            // Specify the validation error messages
            messages: {
                UserName: "Please enter User Name",
                Password: "Please enter Password",
            },

            submitHandler: function (form) {
                form.submit();
            }
        });
    })
</script>