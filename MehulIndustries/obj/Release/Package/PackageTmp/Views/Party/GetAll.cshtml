<table id="tblParty" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email Id</th>
            <th>Contact Person</th>
            <th>Mobile Number</th>
            <th>CST No</th>
            <th>LIC No</th>
            <th>PAN No</th>
            <th>TIN No</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null)
        {
            foreach (var party in Model)
            {
                <tr data-empid="@party.ID">
                    <td>@party.Name</td>
                    <td>@party.EmailId</td>
                    <td>@party.ContactPerson</td>
                    <td>@party.MobileNo</td>
                    <td>@party.CSTNo</td>
                    <td>@party.LICNo</td>
                    <td>@party.PANNo</td>
                    <td>@party.TINNo</td>
                </tr>
            }
        }
    </tbody>
</table>
