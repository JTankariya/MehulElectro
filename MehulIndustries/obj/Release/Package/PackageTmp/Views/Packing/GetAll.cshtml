@model IEnumerable<ViewModels.Packing>
@Styles.Render("~/Content/css/datatablecss")
@*<link href="@Url.Content("~/Content/plugins/datatables/jquery.dataTables.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/plugins/datatables/buttons.bootstrap.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/plugins/datatables/fixedHeader.bootstrap.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/plugins/datatables/responsive.bootstrap.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/plugins/datatables/scroller.bootstrap.min.css")" rel="stylesheet" type="text/css" />*@

<table id="tblPacking" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Conversion Factor With Ltr</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null)
        {
            foreach (var packing in Model)
            {
                <tr data-empid="@packing.ID">
                    <td>@packing.Name</td>
                    <td>@packing.ConversionFactorWithLtr</td>
                </tr>
            }
        }
    </tbody>
</table>
@Scripts.Render("~/Content/js/datatablejs")
@*<script src="@Url.Content("~/Content/plugins/datatables/jquery.dataTables.min.js")"></script>
<script src="@Url.Content("~/Content/plugins/datatables/dataTables.bootstrap.js")"></script>*@

<script>
    $(document).ready(function () {
        $('#tblPacking').DataTable();
    });
</script>