<table id="tblProductGroup" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Product Group Type</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null)
        {
            foreach (var packing in Model)
            {
                <tr data-empid="@packing.ID">
                    <td>@packing.Name</td>
                    <td>@packing.ProductGroupType</td>
                </tr>
            }
        }
    </tbody>
</table>
